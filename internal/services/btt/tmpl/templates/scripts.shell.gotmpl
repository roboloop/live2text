{{- define "health-check" }}
response=$(curl -sSL -w "\n%{http_code}" "http://{{ .AppAddress }}/api/btt/health")
[[ $? -ne 0 ]] && echo -n "‚ö†Ô∏è {{ .AppName}} is not running!" && exit 1

body=$(echo -n "${response}" | head -1)
code=$(echo -n "${response}" | tail -1)
[[ ! ("${code}" -ge 200 && "${code}" -lt 300) ]] && echo -n "‚ö†Ô∏è ${body}" && exit 1
{{- end }}

