  http://{{ .AppAddress }}/api/btt/select-view-mode
{{- end }}

{{- define "select_floating_state" }}
{{- template "log" . }}

curl -X POST -H 'Content-Type: application/json' -sSLf --data-raw '{"floating_state": "{{ .FloatingState }}"}' \
  http://{{ .AppAddress }}/api/btt/select-floating-state
