{{- define "health-check" }}
ok=$(curl -sSLf "http://{{ .AppAddress }}/api/health" 2>/dev/null)
[[ -z "${ok}" ]] && echo "‚ö†Ô∏è {{ .AppName}} is not running!" && exit 1
{{- end }}

